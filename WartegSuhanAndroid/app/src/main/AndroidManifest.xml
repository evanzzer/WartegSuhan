<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.netlab.suhan">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.WartegSUHAN"
        android:usesCleartextTraffic="true"
        tools:targetApi="m"
        tools:ignore="AllowBackup">
        <activity android:name=".ui.TransactionActivity"
            android:launchMode="singleTop"
            android:parentActivityName=".ui.TransactionActivity"/>
        <activity
            android:name=".SplashActivity"
            android:theme="@style/Theme.WartegSUHAN.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.TopUpActivity"
            android:launchMode="singleTop"
            android:parentActivityName=".ui.MenuActivity" />
        <activity
            android:name=".ui.CashierActivity"
            android:launchMode="singleTop"
            android:parentActivityName=".ui.MenuActivity" />
        <activity
            android:name=".ui.customer.CustomerActivity"
            android:launchMode="singleTop"
            android:parentActivityName=".ui.MenuActivity" />
        <activity
            android:name=".ui.stock.EditStockActivity"
            android:launchMode="singleTop"
            android:parentActivityName=".ui.stock.StockActivity" />
        <activity
            android:name=".ui.stock.StockActivity"
            android:launchMode="singleTop"
            android:parentActivityName=".ui.MenuActivity" />
        <activity
            android:name=".ui.MenuActivity"
            android:launchMode="singleTop" />
    </application>

</manifest>